<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yeokm1.nussocprintandroid.fragments.HelpFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:scrollbars = "vertical"
        android:id="@+id/help_textview"
        android:layout_above="@+id/help_problems_button"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:text="@string/help_email_button_text"
        android:id="@+id/help_problems_button"
        android:layout_gravity="left|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/help_source_code_button"
        android:layout_toStartOf="@+id/help_source_code_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_source_code_button_text"
        android:id="@+id/help_source_code_button"
        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
